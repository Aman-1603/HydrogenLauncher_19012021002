<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Notification_Panel">



    <TextView
        style="@style/RegularTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/battery_txt"
        android:text="Battery Status"
        android:textSize="50dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:gravity="center">

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/bmiView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/minusHeight"
            app:layout_constraintEnd_toStartOf="@+id/minusHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:neumorph_shapeAppearance="@style/CustomShapeAppearanceBMIView">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_shape"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/circular_progress_bar" />


                <TextView
                    android:id="@+id/textbattery"
                    style="@style/RegularTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:text="status"
                    android:textSize="25dp" />

            </RelativeLayout>


        </soup.neumorphism.NeumorphCardView>




    </LinearLayout>





</LinearLayout>